[Unit]
Description=U-Bahn Anzeige f√ºr Raspberry Pi
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/ubahn
Environment="NODE_ENV=production"
ExecStart=/usr/bin/sudo /usr/bin/node /home/pi/ubahn/ubahn_anzeige.js
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=ubahn-anzeige

[Install]
WantedBy=multi-user.target
